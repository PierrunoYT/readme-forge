{
  "name": "github-profile-readme-generator",
  "version": "0.1.0",
  "description": "A local CLI tool to generate GitHub profile READMEs",
  "main": "index.js",
  "type": "module",
  "bin": {
    "gh-readme-gen": "./index.js"
  },
  "scripts": {
    "start": "node index.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "keywords": ["github", "readme", "generator", "cli"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "inquirer": "^9.2.12"
  },
  "devDependencies": {
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0"
  },
  "jest": {
    "transform": {},
    "transformIgnorePatterns": [
      "node_modules/(?!chalk)/"
    ],
    "testEnvironment": "node"
  }
}
